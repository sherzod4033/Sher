<style>
  footer {
    background-color: #f5f5f5;
    color: #333;
    padding: 2rem 0 1rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-section {
    flex: 1;
    margin-right: 2rem;
  }

  .footer-section:last-child {
    margin-right: 0;
  }

  h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  li {
    margin-bottom: 0.5rem;
  }

  a {
    color: #333;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .footer-bottom {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #ddd;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
    }

    .footer-section {
      margin-right: 0;
      margin-bottom: 2rem;
    }
  }
</style>